    <bean
        id="activator"
        class="dlt.load.monitor.activator.Activator"
        init-method="start"
        destroy-method="stop"
    />
    
    <bean
        id="processor"
        class="dlt.load.monitor.model.Processor"
    />
    
    <service 
        id="IProcessorService"
        ref="processor"
        interface="dlt.load.monitor.services.IProcessor"
    />
    
    <bean
        id="loadMonitor"
        class="dlt.load.monitor.model.LoadMonitor"
        init-method="start"
        destroy-method="stop">
        <property name="processor" ref="processor"/>
    </bean> 
