<?xml version="1.0" encoding="UTF-8"?>

<blueprint xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0" default-activation="eager">
    
    <reference 
        id="ledgerWriterService"
        interface="dlt.client.tangle.services.ILedgerWriter"
        availability="optional"
   />
    
    <bean
        id="ledgerConnector"
        class="dlt.load.monitor.model.LedgerConnector">
        <property name="ledgerWriter" ref="ledgerWriterService"/>
    </bean>
    
    <bean
        id="activator"
        class="dlt.load.monitor.activator.Activator"
        init-method="start"
        destroy-method="stop"
    />

</blueprint>